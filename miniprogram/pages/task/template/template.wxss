.template-container {
  min-height: 100vh;
  background: #FFF5F7;
  display: flex;
  flex-direction: column;
}

.category-tabs {
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 25rpx;
  margin-right: 10rpx;
  border-radius: 15rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.1) 0%, rgba(255, 167, 38, 0.1) 100%);
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-name {
  color: #FF6B9D;
  font-weight: bold;
}

.template-list {
  flex: 1;
  padding: 20rpx;
}

.template-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.08);
  transition: all 0.3s;
}

.template-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.template-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.template-info {
  flex: 1;
}

.template-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.template-meta {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.difficulty {
  font-size: 24rpx;
}

.template-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.template-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 15rpx;
}

.reward-tags {
  display: flex;
  gap: 15rpx;
}

.reward-tag {
  display: flex;
  align-items: center;
  gap: 5rpx;
  padding: 8rpx 15rpx;
  background: rgba(255, 107, 157, 0.1);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #FF6B9D;
}

.reward-icon {
  font-size: 24rpx;
}

.tag-list {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.task-tag {
  padding: 6rpx 15rpx;
  background: #F5F5F5;
  border-radius: 15rpx;
  font-size: 22rpx;
  color: #999;
}

.empty-state {
  padding: 200rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
