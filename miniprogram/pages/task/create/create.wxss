.create-container {
  min-height: 100vh;
  background: #F5EDE4;
  padding-bottom: 140rpx;
}

.form-scroll {
  height: calc(100vh - 140rpx);
  padding: 16rpx 24rpx;
}

.form-card {
  background: rgba(255, 252, 248, 0.88);
  border-radius: 24rpx;
  padding: 28rpx 28rpx 24rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 26, 32, 0.03);
  border: 1rpx solid rgba(201, 169, 110, 0.05);
}

.form-section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2E1A20;
  letter-spacing: 1rpx;
}

.section-dot {
  width: 4rpx;
  height: 24rpx;
  background: linear-gradient(180deg, #8B2252, rgba(139, 34, 82, 0.3));
  border-radius: 2rpx;
}

.section-dot.gold {
  background: linear-gradient(180deg, #C9A96E, rgba(201, 169, 110, 0.3));
}

.required {
  color: #8B2252;
  font-size: 26rpx;
}

.optional {
  font-size: 22rpx;
  color: #A8949A;
  font-weight: 400;
}

.type-selector {
  display: flex;
  gap: 14rpx;
}

.type-option {
  flex: 1;
  padding: 24rpx 12rpx;
  border-radius: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  background: rgba(46, 26, 32, 0.015);
  border: 1rpx solid transparent;
  transition: all 0.3s;
}

.type-option.active {
  background: rgba(139, 34, 82, 0.03);
  border-color: rgba(139, 34, 82, 0.1);
}

.type-emoji {
  font-size: 40rpx;
  line-height: 1;
}

.type-name {
  font-size: 22rpx;
  color: #7A636B;
  font-weight: 500;
}

.type-option.active .type-name {
  color: #8B2252;
}

.difficulty-selector {
  display: flex;
  gap: 24rpx;
  justify-content: center;
  margin-bottom: 16rpx;
}

.star-item {
  padding: 8rpx;
  transition: all 0.3s;
}

.star-emoji {
  font-size: 48rpx;
  opacity: 0.15;
  transition: all 0.3s;
}

.star-item.active .star-emoji {
  opacity: 1;
  transform: scale(1.08);
}

.difficulty-label {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #8B2252;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.reward-row {
  display: flex;
  gap: 32rpx;
}

.reward-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.reward-icon {
  font-size: 32rpx;
}

.reward-name {
  font-size: 24rpx;
  color: #7A636B;
  font-weight: 500;
}

.date-picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 24rpx;
  background: rgba(46, 26, 32, 0.015);
  border-radius: 14rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.04);
}

.date-value {
  font-size: 28rpx;
  color: #2E1A20;
}

.date-value.placeholder {
  color: #A8949A;
}

.tag-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.tag-chip {
  padding: 14rpx 28rpx;
  background: rgba(46, 26, 32, 0.02);
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #7A636B;
  border: 1rpx solid transparent;
  transition: all 0.3s;
  font-weight: 500;
}

.tag-chip.active {
  background: rgba(139, 34, 82, 0.04);
  color: #8B2252;
  border-color: rgba(139, 34, 82, 0.1);
}

.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(245, 237, 228, 0.92);
  backdrop-filter: blur(24rpx);
  border-top: 1rpx solid rgba(201, 169, 110, 0.06);
}
