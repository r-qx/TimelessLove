.detail-container {
  min-height: 100vh;
  background: #F5EDE4;
  padding: 20rpx 24rpx;
  padding-bottom: 180rpx;
}

.loading-state,
.empty-state {
  min-height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.loading-heart {
  font-size: 56rpx;
}

.empty-icon {
  font-size: 64rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  color: #A8949A;
}

.task-detail {
  padding-top: 12rpx;
}

.detail-header {
  background: rgba(255, 252, 248, 0.88);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 26, 32, 0.03);
  border: 1rpx solid rgba(201, 169, 110, 0.05);
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
}

.title-area {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  min-width: 0;
}

.type-indicator {
  width: 5rpx;
  height: 40rpx;
  border-radius: 3rpx;
  flex-shrink: 0;
}

.type-indicator.personal { background: linear-gradient(180deg, #8B2252, rgba(139, 34, 82, 0.4)); }
.type-indicator.cooperation { background: linear-gradient(180deg, #C9A96E, rgba(201, 169, 110, 0.4)); }
.type-indicator.periodic { background: linear-gradient(180deg, #6B4A6E, rgba(107, 74, 110, 0.4)); }
.type-indicator.challenge { background: linear-gradient(180deg, #B4824F, rgba(180, 130, 79, 0.4)); }

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2E1A20;
  line-height: 1.4;
}

.status-badge {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
  letter-spacing: 1rpx;
}

.status-badge.pending {
  background: rgba(201, 169, 110, 0.08);
  color: #C9A96E;
  border: 1rpx solid rgba(201, 169, 110, 0.12);
}

.status-badge.approved {
  background: rgba(107, 74, 110, 0.06);
  color: #6B4A6E;
  border: 1rpx solid rgba(107, 74, 110, 0.1);
}

.status-badge.in_progress {
  background: rgba(139, 34, 82, 0.05);
  color: #8B2252;
  border: 1rpx solid rgba(139, 34, 82, 0.08);
}

.status-badge.completed {
  background: rgba(107, 74, 110, 0.06);
  color: #6B4A6E;
  border: 1rpx solid rgba(107, 74, 110, 0.1);
}

.status-badge.verified {
  background: rgba(201, 169, 110, 0.08);
  color: #A08650;
  border: 1rpx solid rgba(201, 169, 110, 0.12);
}

.detail-card {
  background: rgba(255, 252, 248, 0.88);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 26, 32, 0.03);
  border: 1rpx solid rgba(201, 169, 110, 0.05);
}

.card-section {
  padding: 4rpx 0;
}

.card-label {
  display: block;
  font-size: 22rpx;
  color: #A8949A;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.card-value {
  display: block;
  font-size: 28rpx;
  color: #2E1A20;
  line-height: 1.6;
}

.card-value.desc {
  color: #7A636B;
}

.card-value.accent {
  color: #8B2252;
  font-weight: 600;
}

.card-value.gold {
  color: #C9A96E;
  font-weight: 500;
}

.card-section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #2E1A20;
  margin-bottom: 20rpx;
}

.card-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(201, 169, 110, 0.08), transparent);
  margin: 24rpx 0;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 28rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.grid-label {
  font-size: 22rpx;
  color: #A8949A;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.grid-value {
  font-size: 28rpx;
  color: #2E1A20;
  font-weight: 600;
}

.grid-value.accent {
  color: #8B2252;
}

.grid-value.gold {
  color: #C9A96E;
}

.proof-gallery {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-top: 20rpx;
}

.proof-img {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(245, 237, 228, 0.92);
  backdrop-filter: blur(24rpx);
  border-top: 1rpx solid rgba(201, 169, 110, 0.06);
}

.verified-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: rgba(201, 169, 110, 0.06);
  border-radius: 999rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
}

.verified-icon {
  font-size: 28rpx;
}

.verified-text {
  font-size: 30rpx;
  color: #C9A96E;
  font-weight: 600;
  letter-spacing: 4rpx;
}

.complete-popup {
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  background: #F5EDE4;
}

.popup-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.popup-title {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #2E1A20;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  display: block;
  font-size: 24rpx;
  color: #A8949A;
  letter-spacing: 2rpx;
}

.upload-area {
  margin-top: 32rpx;
}

.upload-label {
  display: block;
  font-size: 26rpx;
  color: #7A636B;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.img-thumb {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.img-thumb image {
  width: 100%;
  height: 100%;
}

.img-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(46, 26, 32, 0.5);
  color: rgba(245, 237, 228, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
}

.img-add {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed rgba(201, 169, 110, 0.2);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: rgba(201, 169, 110, 0.02);
}

.add-icon {
  font-size: 48rpx;
  color: rgba(201, 169, 110, 0.35);
  line-height: 1;
}

.add-text {
  font-size: 22rpx;
  color: #A8949A;
}

.popup-bottom {
  margin-top: 40rpx;
}

.animate-breathe {
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.04); }
}
