.task-list-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F5EDE4;
}

.tab-header {
  background: rgba(255, 252, 248, 0.88);
  backdrop-filter: blur(24rpx);
  padding: 0 24rpx;
  border-bottom: 1rpx solid rgba(201, 169, 110, 0.06);
}

.tab-bar {
  display: flex;
  height: 96rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #A8949A;
  font-weight: 400;
  transition: all 0.3s;
  letter-spacing: 2rpx;
}

.tab-item.active .tab-text {
  color: #8B2252;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  width: 36rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #8B2252, rgba(139, 34, 82, 0.4));
  border-radius: 2rpx;
}

.task-scroll {
  flex: 1;
  padding: 20rpx 24rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  padding-bottom: 160rpx;
}

.task-item {
  background: rgba(255, 252, 248, 0.88);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 26, 32, 0.03);
  border: 1rpx solid rgba(201, 169, 110, 0.05);
}

.task-item-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 14rpx;
}

.task-title-row {
  display: flex;
  align-items: center;
  gap: 14rpx;
  flex: 1;
  min-width: 0;
}

.type-indicator {
  width: 4rpx;
  height: 32rpx;
  border-radius: 2rpx;
  flex-shrink: 0;
}

.type-indicator.personal {
  background: linear-gradient(180deg, #8B2252, rgba(139, 34, 82, 0.4));
}

.type-indicator.cooperation {
  background: linear-gradient(180deg, #C9A96E, rgba(201, 169, 110, 0.4));
}

.type-indicator.periodic {
  background: linear-gradient(180deg, #6B4A6E, rgba(107, 74, 110, 0.4));
}

.type-indicator.challenge {
  background: linear-gradient(180deg, #B4824F, rgba(180, 130, 79, 0.4));
}

.task-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #2E1A20;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-type-badge {
  font-size: 20rpx;
  color: #8B2252;
  background: rgba(139, 34, 82, 0.04);
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  white-space: nowrap;
  font-weight: 500;
  flex-shrink: 0;
  margin-left: 16rpx;
  letter-spacing: 1rpx;
  border: 1rpx solid rgba(139, 34, 82, 0.06);
}

.task-desc {
  font-size: 26rpx;
  color: #7A636B;
  margin-bottom: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.7;
}

.task-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-rewards {
  display: flex;
  gap: 18rpx;
}

.reward-tag {
  font-size: 24rpx;
  font-weight: 600;
  color: #8B2252;
}

.reward-tag.gold {
  color: #C9A96E;
}

.task-meta {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
  color: #A8949A;
}

.difficulty-stars {
  color: #C9A96E;
}

.empty-state {
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 14rpx;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 8rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  color: #A8949A;
}

.empty-hint {
  font-size: 22rpx;
  color: #C4B8BC;
}

.loading-more {
  padding: 40rpx 0;
  text-align: center;
  display: flex;
  justify-content: center;
}

.no-more {
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.no-more-line {
  width: 48rpx;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(201, 169, 110, 0.15));
}

.no-more-text {
  font-size: 22rpx;
  color: #C4B8BC;
  letter-spacing: 2rpx;
}

.create-actions {
  position: fixed;
  right: 36rpx;
  bottom: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(139, 34, 82, 0.15);
  gap: 4rpx;
}

.action-btn text {
  font-size: 20rpx;
  color: #8B2252;
}

.create-fab {
  width: 104rpx;
  height: 104rpx;
  background: linear-gradient(135deg, #8B2252 0%, #6B1A40 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 36rpx rgba(139, 34, 82, 0.2), 0 0 48rpx rgba(139, 34, 82, 0.06);
}

.fab-icon {
  font-size: 48rpx;
  color: rgba(245, 237, 228, 0.9);
  font-weight: 300;
  line-height: 1;
  margin-top: -2rpx;
}
