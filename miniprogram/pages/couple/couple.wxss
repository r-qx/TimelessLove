.couple-container {
  min-height: 100vh;
  background: #F5EDE4;
  padding: 40rpx 28rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.header-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 24rpx;
}

.header-title {
  display: block;
  font-size: 42rpx;
  font-weight: 300;
  color: #2E1A20;
  margin-bottom: 14rpx;
  letter-spacing: 4rpx;
}

.header-subtitle {
  display: block;
  font-size: 22rpx;
  color: rgba(201, 169, 110, 0.55);
  letter-spacing: 8rpx;
  text-transform: uppercase;
}

.tab-switcher {
  display: flex;
  background: rgba(255, 252, 248, 0.8);
  border-radius: 999rpx;
  padding: 6rpx;
  margin-bottom: 40rpx;
  position: relative;
  border: 1rpx solid rgba(201, 169, 110, 0.06);
}

.tab-bg {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  width: calc(50% - 6rpx);
  height: calc(100% - 12rpx);
  background: linear-gradient(135deg, #8B2252 0%, #6B1A40 100%);
  border-radius: 999rpx;
  transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6rpx 20rpx rgba(139, 34, 82, 0.15);
}

.tab-bg.right {
  transform: translateX(100%);
}

.tab-btn {
  flex: 1;
  text-align: center;
  padding: 22rpx 0;
  font-size: 28rpx;
  color: #7A636B;
  border-radius: 999rpx;
  transition: all 0.3s;
  position: relative;
  z-index: 1;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.tab-btn.active {
  color: rgba(245, 237, 228, 0.9);
  font-weight: 500;
}

.content {
  margin-top: 16rpx;
}

.form-card {
  background: rgba(255, 252, 248, 0.88);
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 6rpx 32rpx rgba(46, 26, 32, 0.04);
  border: 1rpx solid rgba(201, 169, 110, 0.06);
}

.form-field {
  margin-bottom: 36rpx;
}

.field-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.field-icon {
  font-size: 28rpx;
  line-height: 1;
}

.field-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2E1A20;
  letter-spacing: 1rpx;
}

.date-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 26rpx 28rpx;
  background: rgba(46, 26, 32, 0.015);
  border-radius: 14rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.05);
}

.date-text {
  font-size: 28rpx;
  color: #2E1A20;
}

.date-text.placeholder {
  color: #A8949A;
}

.code-input {
  padding: 28rpx;
  background: rgba(46, 26, 32, 0.015);
  border-radius: 14rpx;
  font-size: 36rpx;
  color: #2E1A20;
  letter-spacing: 12rpx;
  text-align: center;
  font-weight: 300;
  border: 1rpx solid rgba(201, 169, 110, 0.05);
}

.create-action-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8B2252 0%, #6B1A40 100%);
  color: rgba(245, 237, 228, 0.9);
  border: none;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 6rpx;
  box-shadow: 0 10rpx 32rpx rgba(139, 34, 82, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
}

.create-action-btn::after {
  border: none;
}

.action-btn-text {
  color: rgba(245, 237, 228, 0.9);
}

.form-content {
  width: 100%;
}

.success-content {
  text-align: center;
}

.success-icon-wrap {
  margin-bottom: 24rpx;
}

.success-emoji {
  font-size: 88rpx;
}

.success-title {
  display: block;
  font-size: 38rpx;
  font-weight: 300;
  color: #2E1A20;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}

.success-desc {
  display: block;
  font-size: 26rpx;
  color: #7A636B;
  margin-bottom: 40rpx;
  line-height: 1.7;
}

.code-box {
  padding: 44rpx 32rpx;
  background: rgba(139, 34, 82, 0.02);
  border: 1rpx dashed rgba(139, 34, 82, 0.1);
  border-radius: 20rpx;
  margin-bottom: 28rpx;
}

.invite-code {
  font-size: 56rpx;
  font-weight: 300;
  color: #8B2252;
  letter-spacing: 20rpx;
}

.copy-action-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8B2252 0%, #6B1A40 100%);
  color: rgba(245, 237, 228, 0.9);
  border: none;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 6rpx;
  box-shadow: 0 10rpx 32rpx rgba(139, 34, 82, 0.18);
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.copy-action-btn::after {
  border: none;
}

.tip-box {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 22rpx 24rpx;
  background: rgba(201, 169, 110, 0.05);
  border-radius: 14rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.06);
}

.tip-icon {
  font-size: 24rpx;
  line-height: 1;
}

.tip-text {
  font-size: 22rpx;
  color: rgba(201, 169, 110, 0.7);
  font-weight: 400;
  letter-spacing: 1rpx;
}

.animate-breathe {
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.04); opacity: 0.9; }
}
