.login-container {
  min-height: 100vh;
  background: linear-gradient(170deg, #0D0709 0%, #1A0A12 20%, #2D1020 45%, #4A1A32 70%, #6B1A40 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 64rpx;
  position: relative;
  overflow: hidden;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(ellipse at 50% 30%, rgba(201, 169, 110, 0.04) 0%, transparent 60%),
              radial-gradient(ellipse at 20% 80%, rgba(139, 34, 82, 0.08) 0%, transparent 50%);
  pointer-events: none;
}

.bg-glow {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
}

.g1 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(201, 169, 110, 0.05) 0%, transparent 70%);
  top: 10%;
  right: -120rpx;
  animation: glow 8s ease-in-out infinite;
}

.g2 {
  width: 350rpx;
  height: 350rpx;
  background: radial-gradient(circle, rgba(139, 34, 82, 0.06) 0%, transparent 70%);
  bottom: 10%;
  left: -100rpx;
  animation: glow 10s ease-in-out infinite 2s;
}

@keyframes glow {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.1); }
}

.login-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo-circle {
  width: 200rpx;
  height: 200rpx;
  background: rgba(201, 169, 110, 0.04);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.08);
  box-shadow: 0 0 80rpx rgba(201, 169, 110, 0.04);
}

.logo-emoji {
  font-size: 96rpx;
  line-height: 1;
}

.brand-name {
  font-size: 56rpx;
  font-weight: 300;
  color: rgba(245, 237, 228, 0.9);
  letter-spacing: 10rpx;
  margin-bottom: 24rpx;
}

.brand-divider {
  width: 40rpx;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(201, 169, 110, 0.4), transparent);
  margin-bottom: 24rpx;
}

.brand-slogan {
  font-size: 22rpx;
  color: rgba(201, 169, 110, 0.45);
  letter-spacing: 12rpx;
  text-transform: uppercase;
}

.login-card {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 100%;
  height: 108rpx;
  background: linear-gradient(135deg, rgba(201, 169, 110, 0.12) 0%, rgba(201, 169, 110, 0.06) 100%);
  border: 1rpx solid rgba(201, 169, 110, 0.2);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
  padding: 0;
}

.login-btn::after {
  border: none;
}

.btn-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wechat-icon {
  font-size: 36rpx;
  line-height: 1;
}

.btn-label {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(201, 169, 110, 0.85);
  letter-spacing: 6rpx;
}

.agreement-box {
  margin-top: 56rpx;
  padding: 0 10rpx;
}

.agreement-text {
  font-size: 22rpx;
  color: rgba(245, 237, 228, 0.3);
}

.agreement-link {
  font-size: 22rpx;
  color: rgba(201, 169, 110, 0.5);
  margin: 0 4rpx;
}

.bottom-decoration {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 1;
}

.bottom-text {
  font-size: 20rpx;
  color: rgba(245, 237, 228, 0.12);
  letter-spacing: 8rpx;
}

.agreement-popup {
  width: 650rpx;
  max-height: 80vh;
  padding: 40rpx 30rpx;
  background: #F5EDE4;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2E1A20;
  text-align: center;
  margin-bottom: 30rpx;
}

.popup-content {
  max-height: 60vh;
  padding: 24rpx;
  background: rgba(46, 26, 32, 0.03);
  border-radius: 16rpx;
}

.content-text {
  font-size: 28rpx;
  color: #7A636B;
  line-height: 1.8;
  white-space: pre-wrap;
}

.animate-breathe {
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.04); opacity: 0.9; }
}
