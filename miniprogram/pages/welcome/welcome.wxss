.welcome-container {
  min-height: 100vh;
  background: linear-gradient(170deg, #0D0709 0%, #1A0A12 15%, #2D1020 35%, #4A1A32 55%, #6B1A40 80%, #8B2252 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.bg-particles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.particle {
  position: absolute;
  border-radius: 50%;
}

.p1 {
  width: 260rpx;
  height: 260rpx;
  background: radial-gradient(circle, rgba(201, 169, 110, 0.08) 0%, transparent 70%);
  top: 8%;
  right: -60rpx;
  animation: glow 6s ease-in-out infinite;
}

.p2 {
  width: 340rpx;
  height: 340rpx;
  background: radial-gradient(circle, rgba(139, 34, 82, 0.1) 0%, transparent 70%);
  top: 28%;
  left: -100rpx;
  animation: glow 8s ease-in-out infinite 1.5s;
}

.p3 {
  width: 180rpx;
  height: 180rpx;
  background: radial-gradient(circle, rgba(201, 169, 110, 0.06) 0%, transparent 70%);
  bottom: 28%;
  right: 15%;
  animation: glow 7s ease-in-out infinite 3s;
}

.p4 {
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.04) 0%, transparent 70%);
  top: 50%;
  right: 8%;
  animation: glow 5s ease-in-out infinite 0.8s;
}

.p5 {
  width: 220rpx;
  height: 220rpx;
  background: radial-gradient(circle, rgba(139, 34, 82, 0.08) 0%, transparent 70%);
  bottom: 12%;
  left: 8%;
  animation: glow 9s ease-in-out infinite 4s;
}

@keyframes glow {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.15); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.feature-swiper {
  flex: 1;
  height: 72vh;
  position: relative;
  z-index: 1;
}

.feature-slide {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 64rpx;
}

.slide-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrap {
  width: 180rpx;
  height: 180rpx;
  background: rgba(201, 169, 110, 0.06);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 52rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
  box-shadow: 0 0 80rpx rgba(201, 169, 110, 0.06), inset 0 0 40rpx rgba(201, 169, 110, 0.03);
}

.feature-icon {
  font-size: 88rpx;
  line-height: 1;
}

.feature-title {
  font-size: 52rpx;
  font-weight: 300;
  color: rgba(245, 237, 228, 0.95);
  margin-bottom: 16rpx;
  letter-spacing: 8rpx;
}

.feature-subtitle {
  font-size: 24rpx;
  color: rgba(201, 169, 110, 0.6);
  letter-spacing: 10rpx;
  margin-bottom: 40rpx;
  text-transform: uppercase;
}

.divider-line {
  width: 48rpx;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(201, 169, 110, 0.5), transparent);
  margin-bottom: 40rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: rgba(245, 237, 228, 0.5);
  text-align: center;
  line-height: 2.2;
  white-space: pre-line;
  letter-spacing: 2rpx;
  font-weight: 300;
}

.action-section {
  padding: 0 64rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  position: relative;
  z-index: 1;
}

.start-btn {
  width: 100%;
  height: 104rpx;
  background: linear-gradient(135deg, rgba(201, 169, 110, 0.15) 0%, rgba(201, 169, 110, 0.08) 100%);
  border: 1rpx solid rgba(201, 169, 110, 0.25);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
}

.start-btn::after {
  border: none;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(201, 169, 110, 0.9);
  letter-spacing: 8rpx;
}

.skip-text {
  font-size: 24rpx;
  color: rgba(245, 237, 228, 0.25);
  letter-spacing: 4rpx;
  padding: 10rpx 20rpx;
}

.animate-breathe {
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.04); opacity: 0.9; }
}
