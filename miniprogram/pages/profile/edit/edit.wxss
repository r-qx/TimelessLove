.edit-container {
  min-height: 100vh;
  background: #F5EDE4;
  padding-bottom: 120rpx;
}

.avatar-section {
  padding: 60rpx 0 44rpx;
  display: flex;
  justify-content: center;
}

.avatar-card {
  position: relative;
}

.avatar-ring {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  padding: 4rpx;
  background: linear-gradient(135deg, rgba(139, 34, 82, 0.15), rgba(201, 169, 110, 0.2));
}

.edit-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #F5EDE4;
}

.avatar-overlay {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  right: 4rpx;
  bottom: 4rpx;
  border-radius: 50%;
  background: rgba(13, 7, 9, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  opacity: 0;
  transition: opacity 0.3s;
  backdrop-filter: blur(4rpx);
}

.avatar-card:active .avatar-overlay {
  opacity: 1;
}

.camera-emoji {
  font-size: 44rpx;
}

.overlay-text {
  font-size: 20rpx;
  color: rgba(245, 237, 228, 0.8);
  font-weight: 400;
  letter-spacing: 2rpx;
}

.form-section {
  padding: 0 24rpx;
}

.form-card {
  background: rgba(255, 252, 248, 0.88);
  border-radius: 24rpx;
  padding: 8rpx 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 26, 32, 0.03);
  border: 1rpx solid rgba(201, 169, 110, 0.05);
}

.field-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
}

.field-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #2E1A20;
  width: 120rpx;
  flex-shrink: 0;
  letter-spacing: 1rpx;
}

.field-item van-field {
  flex: 1;
}

.field-value-row {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.field-value {
  font-size: 28rpx;
  color: #2E1A20;
}

.field-value.placeholder {
  color: #A8949A;
}

.field-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(201, 169, 110, 0.06), transparent);
}

.save-section {
  padding: 60rpx 32rpx;
}
