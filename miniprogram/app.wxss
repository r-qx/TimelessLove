@import './miniprogram_npm/@vant/weapp/common/index.wxss';

page {
  background-color: #F5EDE4;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'SF Pro Display',
    'Helvetica Neue', 'Noto Sans CJK SC', sans-serif;
  font-size: 28rpx;
  color: #2E1A20;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
}

.container {
  padding: 32rpx;
  box-sizing: border-box;
}

.primary-color {
  color: #8B2252;
}

.secondary-color {
  color: #C9A96E;
}

.text-muted {
  color: #A8949A;
}

.text-secondary {
  color: #7A636B;
}

.text-center {
  text-align: center;
}

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }

.card {
  background: rgba(255, 252, 248, 0.82);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 32rpx rgba(46, 26, 32, 0.05), 0 2rpx 8rpx rgba(139, 34, 82, 0.03);
  backdrop-filter: blur(24rpx);
  border: 1rpx solid rgba(201, 169, 110, 0.08);
}

.btn-primary {
  background: linear-gradient(135deg, #8B2252 0%, #6B1A40 100%);
  color: #F5EDE4;
  border: none;
  border-radius: 999rpx;
  padding: 26rpx 64rpx;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  box-shadow: 0 10rpx 32rpx rgba(139, 34, 82, 0.2);
}

.btn-primary::after {
  border: none;
}

.btn-secondary {
  background: rgba(255, 252, 248, 0.85);
  color: #8B2252;
  border: 1rpx solid rgba(139, 34, 82, 0.12);
  border-radius: 999rpx;
  padding: 26rpx 64rpx;
  font-size: 30rpx;
  font-weight: 600;
  backdrop-filter: blur(20rpx);
}

.btn-secondary::after {
  border: none;
}

.love-icon {
  width: 44rpx;
  height: 44rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(201, 169, 110, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(46, 26, 32, 0.1);
}

.badge {
  width: 64rpx;
  height: 64rpx;
}

.divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(201, 169, 110, 0.15) 50%, transparent 100%);
  margin: 24rpx 0;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.04); opacity: 0.92; }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

@keyframes shimmer {
  0% { background-position: -200% center; }
  100% { background-position: 200% center; }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes glow {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 0.7; }
}

.animate-breathe {
  animation: breathe 3.5s ease-in-out infinite;
}

.animate-float {
  animation: float 5s ease-in-out infinite;
}
